@model IEnumerable<NguyenDuongHung_01.Models.SinhVien>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mã Sinh Viên
            </th>
            <th>
                Họ Tên
            </th>
            <th>
                Lớp
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
     <td>
                    @Html.DisplayFor(modelItem => item.MaSinhVien)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LopHoc.TenLop)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaSinhVien">Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.MaSinhVien">Xem</a> |
                <a asp-action="Delete" asp-route-id="@item.MaSinhVien">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
